[global]
    monitor = 0
    follow = none
    indicate_hidden = yes
    shrink = no
    transparency = 0
    notification_height = 0
    separator_height = 2
    padding = 8
    horizontal_padding = 8
    frame_width = 2
    frame_color = "#4287f5"
    sort = yes
    idle_threshold = 0

    ### Text ###
    
    font = Iosevka 10
    line-height = 1
    markup = full

    # Message format:
    # %a - appname
    # %s - summary
    # %b - body
    # %i - iconname (with path)
    # %I - iconname (without path)
    # %p - progress value (if set)
    # %n - progress value no extra characters
    # %% - literal %
    format = "<b>%a</b>\n<i>%s</i>\n%b"

    alignment = center
    vertical_alignment = center
    show_age_threshold = 5
    word_wrap = no
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes
   
    ### Icons ###
    
    icon_position = off

    ### History ###
    
    history_length = 20
    
    ### Misc ###
    
    dmenu = /usr/bin/dmenu -p dunst:
    browser = /usr/bin/firefox -new-tab
    always_run_script = true
    title = Dunst
    class = Dunst
    startup_notification = false
    verbosity = mesg
    corner_radius = 15
    ignore_dbusclose = false

    ### Mouse ###

    mouse_left_click = close_current
    mouse_middle_click = do_action
    mouse_right_click = do_action

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space

[urgency_normal]
    background = "#202632"
    foreground = "#ffffff"
    timeout = 5

[urgency_critical]
    background = "#ffffff"
    foreground = "#db0101"
    timeout = 0
